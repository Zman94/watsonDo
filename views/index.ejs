<html>
<head>
<link href="../css/ionicons.css" rel="stylesheet" type="text/css">
<link href="../css/ionicons.min.css" rel="stylesheet" type="text/css">
<link href="../css/style.css" rel="stylesheet" type="text/css">
<link href="../css/simple-grid.css" rel="stylesheet" type="text/css">


<title>watsonDo</title>
</head>
<body>
<nav>
    <div class="watson-head">
        <h1>Watson, what should I do today?</h1>
    </div>
</nav>
<div class="row">
    <div class="col-8">
        <div class="white-box">
                 <form action="/login" method="post">
            <div class="form-group">

                <input type="text" class="form-control" placeholder="Type Here" name="do">
                <button type="submit" class="btn btn-primary btn-lg" formaction="/go">Go
                </button>
            </div>
        </form>
        </div>
    <div class="text-box">
        <% temp.forEach(function(msgs) { %>
            <% if(msgs.user == "You"){ %>
                <div class="msg"><%= msgs.user %> :  <%= msgs.msg %></div>
            <% } else {%>
                <div class="msg-grey"><%= msgs.user %> :  <%= msgs.msg %></div>
            <% } %>
        <% }); %>
    </div>
    </div>
    <div class="col-4">
    <div class="sugg-box">
            <h3>Suggestions From Google</h3>
            <ul>
                <% suggestionsGoogle.forEach(function(drink) { %>
                <div class="output"><%= drink.name %>
                    <ul>
                    <% if(drink.opening_hours.open_now) {%>
                        <li>Open Now</li>
                        <li>Rating: <%= drink.rating %></li>
                    <%} else { %>
                        <li>Closed</li>
                        <li>Rating: <%= drink.rating %></li>
                    <%}%>
                    </ul>
                <% }); %>
            </ul>
        </div>
        <div class="sugg-box">
            <h3>Suggestions From Yelp</h3>
            <ul>
                <% suggestionsYelp.forEach(function(drink) { %>
                <div class="output"><%= drink.name %>
                    <ul>
                        <li> <%= drink.location.address1 %> </li>
                        <li> <%= drink.location.city %> , <%= drink.location.zip_code %> </li>
                        <li> Rating: <%= drink.rating %> </li>
                        <li> Price: <%= drink.price %> </li>
                        <li> Phone: <%= drink.phone %> </li>
                    </ul>
                </div>
                <% }); %>
            </ul>
        </div>
        <div class="sugg-box">
            <h3>Suggestions From Other Users</h3>
                <ul>
                <% suggestionsOthers.forEach(function(drink) { %>
                <li>Activity: <%= drink.activity %> <br>Address: <%= drink.address %> <br> Open Hours: <%= drink.open_hours %> <br>Website: <%= drink.website %> <br>Phone Number: <%= drink.phone_num %></li>
                <% }); %>
                </ul>
        </div>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-12">
    <div class="input-box">
        <form method="post" action="/">
            <h3>Input Personal Suggestions</h3>
            <input class="center-it" type="text" name="activity" placeholder="Activity">
            <input class="center-it" type="text" name="address" placeholder="Address">
            <input class="center-it" type="text" name="open_hours" placeholder="Open Hours">
            <input class="center-it" type="text" name="website" placeholder="Website">
            <input class="center-it" type="text" name="phone_num" placeholder="Phone Number">
            <input class="center-it" id = "button" type="submit" value="Submit">
        </form>
    </div>

    </div>
</div>
</body>
</html>
